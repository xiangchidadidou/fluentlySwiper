/* pages/my/my.wxss */
.video {
    width: 100%;
    height: 600rpx; /* 增加高度以放大视频 */
    margin-top: 30rpx;
    background-color: #000;
    border-radius: 12rpx;
    box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
    position: relative; /* 添加定位属性 */
    overflow: hidden; /* 隐藏超出部分 */
}
.my {
    padding: 20rpx;
}

.my_top {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.my_top_img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin-bottom: 30rpx;
}

.my_top_name {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}

.input-field {
    width: 100%;
    height: 80rpx;
    padding: 0 20rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    font-size: 28rpx;
}

.login-btn {
    margin-top: 40rpx;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    background: #ffa500;
    color: #fff;
    border-radius: 44rpx;
    font-size: 32rpx;
}